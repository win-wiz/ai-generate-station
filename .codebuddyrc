{
  // 代码风格与格式规范
  "codeStyle": {
    "indentSize": 2,
    "useTabs": false,
    "quoteStyle": "single", // 或 "double"
    "semicolon": true // 对于 JavaScript/TypeScript 等语言, 语句末尾分号
  },

  // 命名约定规范
  "namingConvention": {
    "variable": "camelCase",
    "function": "camelCase",
    "class": "PascalCase",
    "constant": "UPPER_CASE",
    "component": "kebab-case"
  },

  // 代码审查与质量规则
  "reviewRules": {
    "securityCheck": true, // 启用安全漏洞检查（如SQL注入、XSS）
    "performanceCheck": true, // 启用性能瓶颈检查
    "complexityThreshold": 15, // 圈复杂度阈值
  },

  // 项目特定规则与约束 (非常重要)
  "projectSpecificRules": [
    "API响应必须遵循统一的包装格式 { code: number, data: T, message: string }",
    "禁止直接使用alert进行用户提示",
    "数据库查询必须使用参数化查询，禁止字符串拼接",
    "所有异步操作必须提供错误处理"
  ]

}